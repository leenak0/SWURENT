<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#900020"
    tools:context=".reservation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"

            android:background="#ffffff"
            android:text="*강의실 601호 안내. \n PC 5번, 30번 고장"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="10pt"
                android:text="선택한 날짜: "/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:layout_marginLeft="10dp"
                android:text="2019년 8월 1일" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="10pt"
                android:text="예약 시간 선택: "/>

            <TextView
                android:id="@+id/selected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:layout_marginLeft="10dp"
                android:text="15시 ~" />


            <Spinner
                android:id="@+id/spinner_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:entries="@array/time_array"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="10pt"
                android:text="이용 인원: "/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="인원을 입력하세요."
                android:inputType="textPersonName" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/selected_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="10pt"
                android:text="이용 목적: "/>

            <Spinner
                android:id="@+id/spinner_object"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:entries="@array/object_array" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="10pt"
                android:text="참석 예정자: "/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:hint="이름을 입력하세요."
                android:inputType="textPersonName" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:textSize="10pt"
                android:text="기타 사항: "/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="start|top"
                android:hint="입력해주세요."
                android:inputType="textMultiLine" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2">

        <Button
            android:id="@+id/btn_reservation"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="예약"
            android:textColor="@color/wine"
            android:textSize="18sp"
            android:background="@drawable/mainmenu"/>

        <Button
            android:id="@+id/btn_move_back_reservation"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="취소"
            android:textColor="@color/wine"
            android:textSize="18sp"
            android:background="@drawable/mainmenu"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2">

        <TextView
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textSize="5pt"
            android:text="안내사항 \n\n 1. 예약시간 15분이 지나도 입실하지 않으면 예약이 자동 취소됩니다. \n 2. 사용 후 반드시 모든 기기와 집기들을 정리 해 주시기 바랍니다. \n 3. 음식물은 절대 반입 불가합니다.
"/>


    </LinearLayout>


</LinearLayout>